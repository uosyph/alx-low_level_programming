.PHONY = all $(NAME) clean oclean fclean re

CC=gcc
CFLAGS=-Wall -Werror -Wextra -pedantic
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
RM=rm

all: $(NAME)

%.o: %.c %.h
	$(CC) -c $^

$(NAME): $(OBJ)
	$(CC) $^ -o $@

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean:
	$(RM) -f *~ $(OBJ) $(NAME)
re:
	$(RM) -f $(OBJ)
